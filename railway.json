{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip3 install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "gunicorn -w 4 -b 0.0.0.0:5001 api:app",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "never"
  }
}
